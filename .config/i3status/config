# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        color_good = "#A6E22E"
        color_bad = "#FF2C57"
        color_degraded = "#DC322F"
        markup = "pango"
}

order += "read_file uptime"
order += "cpu_temperature 0"
order += "load"
order += "disk /"
order += "volume master"
order += "ethernet enp1s0"
order += "tztime local"

wireless wlp3s0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet enp1s0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "🖧: %ip(%speed)✔"
        format_down = "🖧:down✘"
}

battery 0 {
        format = "%status %percentage until %emptytime"
        format_down = "No battery"
        status_chr = "⚡ CHR"
        status_bat = "🔋 BAT"
        status_unk = "? UNK"
        status_full = "☻ FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "🗓: %a %Y-%m-%d %H:%M:%S"
}

load {
        format = "<span color='#FF7700'>🖥</span>: %1min %5min %15min"
}

cpu_temperature 0 {
        format = "<span color='#FF4444'>🌡</span>: %degrees °C"
        path = "/sys/bus/platform/devices/coretemp.0/hwmon/hwmon*/temp1_input"
        
}

cpu_temperature 1 {
        format = "<span color='#FFFF33'>⛅</span>: %degrees °C"
        path = "~/.extra/weather"
}

disk "/" {
        format = "<span color='#5555FF'>🖴</span>: <span color='#77CCFF'>%used</span> / <span color='#8888FF'>%total</span>"
}

volume master {
        format = "<span color='#55DD66'>🎧</span>: %volume"
        format_muted = "<span color='#FF1111'>🔇: (%volume)</span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
} 

read_file uptime {
        format = "<span color='#FF55BB'>⏲</span>: <span color='#DDDDDD'>%content</span>"
        path = "/proc/uptime"
}
